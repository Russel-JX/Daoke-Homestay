.checkin-notice-wrapper {
    padding: 60rpx 40rpx 46rpx 40rpx;
    background-color: #fff;
    box-shadow: 0 1px 3rpx 0 rgba(0,0,0,0.06);
    margin-bottom: 20rpx;
}

.checkin-title {
    line-height: 56rpx;
    font-weight: 400;
    font-size: 40rpx;
    color: #333333;
    letter-spacing: 0;
    margin-bottom: 14rpx;
}

.inOrOut {
    display: flex;
    justify-content: space-between;
    padding: 24rpx 0;
}

.inOrOut::before {
    border-bottom: 1px solid #e9e9e9;
}

.br1::before {
    width: 200%;
    height: 200%;
    transform: scale(.5);
    position: absolute;
    content: '';
    top: 0;
    left: 0;
    transform-origin: 0 0;
}

.br1 {
    position: relative;
}

.title {
    font-size: 28rpx;
    color: #999999;
    letter-spacing: 0;
    min-width: 112rpx;
}

.time-list {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.text {
    font-size: 28rpx;
    color: #333333;
}

.mb18 {
    margin-bottom: 18rpx;
}

.mt24 {
    margin-top: 24rpx;
}

.reception-list {
    overflow: hidden;
}

.reception-list .recetption-alone {
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    float: left;
    margin-bottom: 8rpx;
}

.reception-list .recetption-alone.disabled .icon image {
    width: 24rpx;
    height: 24rpx;
}

.recetption-alone .icon {
    width: 24rpx;
    height: 24rpx;
    display: flex;
    align-items: flex-end;
    margin-right: 4rpx;
}

.image-icon {
    width: 24rpx;
    height: 24rpx;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
}

.recetption-alone .name {
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 0;
}

.recetption-alone.disabled .name {
    color: #c2c2c2;
}

.icon image {
    width: 24rpx;
    height: 24rpx;
}