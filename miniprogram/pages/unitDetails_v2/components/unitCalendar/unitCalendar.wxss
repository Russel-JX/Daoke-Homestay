.date-wrapper {
    padding: 60rpx 40rpx 52rpx 40rpx;
    background-color: #ffffff;
    margin-bottom: 20rpx;
    box-shadow: 0 1px 3rpx 0 rgba(0,0,0,0.06);
}

.date-title {
    line-height: 56rpx;
    margin-bottom: 18rpx;
    font-weight: 400;
    font-size: 40rpx;
    color: #333333;
    letter-spacing: 0;
}

.date-checkin-checkout {
    display: flex;
    justify-content: space-between;
}

.date-checkin-checkout .checkin,.date-checkin-checkout .checkout {
    display: flex;
    flex-direction: column;
}

.date-checkin-checkout .checkin .checkin-title,.date-checkin-checkout .checkout .checkout-title {
    margin-bottom: 5rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #999999;
    letter-spacing: 0;
}

.date-checkin-checkout .total-day {
    display: flex;
    align-items: flex-end;
}

.date-checkin-checkout .total-day .day {
    display: inline-flex;
    align-items: center;
    padding: 1px 14rpx 0 14rpx;
    margin-bottom: 8rpx;
    font-weight: 400;
    font-size: 24rpx;
    color: #d7616d;
    text-align: center;
}

.date-checkin-checkout .total-day .day::before {
    border: 1px solid #d7616d;
    border-radius: 200rpx;
}

.checkin-date,.checkout-date {
    display: flex;
    align-items: flex-end;
}

.checkin-date .date,.checkout-date .date {
    line-height: 60rpx;
    margin-right: 10rpx;
    font-size: 42rpx;
    color: #333333;
    letter-spacing: 0;
}

.checkin-date .weekend-text,.checkout-date .weekend-text {
    margin-bottom: 8rpx;
    font-size: 24rpx;
    color: #333333;
    letter-spacing: 0;
}

.br1::before {
    width: 200%;
    height: 200%;
    transform: scale(.5);
    position: absolute;
    content: '';
    top: 0;
    left: 0;
    transform-origin: 0 0;
}

.br1 {
    position: relative;
}