page {
    display: block;
    height: 100%;
    box-sizing: border-box;
    position: relative;
}

.scroll-fixed {
    position: fixed!important;
    left: 0;
    top: 0;
    right: 0;
}

.scroll-y {
    height: 100%;
    background-color: #fff;
}

.y-font {
    color: #fd8238;
}

.preview-head {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    padding: 14px 20px;
    background-color: #F7F9FA;
    font-size: 12px;
    margin: 40rpx;
}

.preview-head .list-itme {
    -webkit-box-flex: 7;
    flex: 7;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-flow: column;
    text-align: right;
}

.preview-head .list-itme .point {
    margin: 0 8px 0 3px;
}

.preview-head .list-itme:first-child {
    text-align: left;
    -webkit-box-flex: 6;
    flex: 6;
    display: inline-block;
}

.preview-head .stars {
    position: relative;
    display: inline-block;
    margin-right: 20rpx;
}

.preview-head .stars .star {
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    margin-right: 6rpx;
    background: url(https://nm.tujia.com/static/images/webchatApp/page-unitDetal/star-empty.png) no-repeat;
    background-size: 100%;
}

.preview-head .stars .star-score {
    position: absolute;
    left: 0;
    top: 0;
    white-space: nowrap;
    overflow: hidden;
    width: 0%;
}

.preview-head .stars .star-score .star {
    background: url(https://nm.tujia.com/static/images/webchatApp/page-unitDetal/star-full.png) no-repeat;
    background-size: 100%;
}

.comments {
    position: relative;
    color: #666;
    padding: 40rpx 0;
    margin: 0 40rpx;
}

.comments::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    border-bottom: 1px solid #e9e9e9;
    box-sizing: border-box;
    width: 200%;
    height: 200%;
    transform: scale(0.5);
    transform-origin: left top;
    border-radius: 0;
    pointer-events: none;
}

.comments__user {
    position: relative;
    font-size: 24rpx;
    line-height: 34rpx;
}

.comments__score {
    margin: 24rpx 0 16rpx;
}

.comments__score .stars {
    position: relative;
    display: inline-block;
    margin-right: 20rpx;
}

.comments__score .stars .star {
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    margin-right: 6rpx;
    background: url(https://nm.tujia.com/static/images/webchatApp/page-unitDetal/star-empty2.png) no-repeat;
    background-size: 100%;
}

.comments__score .stars .star-score {
    position: absolute;
    left: 0;
    top: 0;
    white-space: nowrap;
    overflow: hidden;
    width: 0%;
}

.comments__score .stars .star-score .star {
    background: url(https://nm.tujia.com/static/images/webchatApp/page-unitDetal/star-full2.png) no-repeat;
    background-size: 100%;
}

.comments__detail {
    margin-top: 10rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}

.comments__pictures {
    margin-top: 24rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.comments__pictures .thumbnails {
    position: relative;
    display: block;
    width: 150rpx;
    height: 150rpx;
    font-size: 24rpx;
    line-height: 120rpx;
    color: #999;
    text-align: center;
    background: #f0f3f6;
    margin-right: 20rpx;
    border: 0;
}

.comments__pictures .thumbnails image {
    width: 100%;
    height: 100%;
}

.comments__pictures .thumbnails text {
    display: inline-block;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    text-align: center;
    line-height: 75px;
    position: absolute;
    top: 0;
    left: 0;
}

.user-avatar {
    display: inline-block;
    float: left;
    width: 64rpx;
    height: 64rpx;
    margin-right: 20rpx;
    border-radius: 64rpx;
    background: url(https://staticfile.tujia.com/WechatApp/images/user_avatar.png) no-repeat center center;
    background-size: cover;
}

.user-date {
    top: 5rpx;
    color: #999;
}

.reply-detail {
    margin-top: 32rpx;
    padding: 20rpx 22rpx;
    background-color: #f7f9fa;
    color: #666;
    font-size: 24rpx;
    line-height: 30rpx;
}

.reply-detail__name {
    color: #fd8238;
}

.text-nowrap {
    word-break: break-all;
}