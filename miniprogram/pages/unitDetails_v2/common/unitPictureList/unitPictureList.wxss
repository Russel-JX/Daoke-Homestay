.pictureBlock {
}

.hide {
    display: none;
}

.titleTags {
    z-index: 99;
    width: 100%;
    overflow: hidden;
}

.tagitem-box {
    float: left;
    width: 25%;
    text-align: left;
}

.tagitem {
    display: inline-block;
    width: 90%;
    height: 58rpx;
    margin-bottom: 18rpx;
    font-size: 28rpx;
    line-height: 58rpx;
    text-align: center;
    border: 1rpx solid #DADADA;
    border-radius: 3px;
    background: #fff;
}

.active {
    color: #fff;
    border: 1rpx solid rgb(253, 56, 56);
    background: rgb(253, 102, 56);
}

#piclist {
    position: absolute;
    left: 0;
    width: 100%;
    height: 100%;
}

.scrollbody {
    width: 90%;
    margin: 0 auto;
}

.picturelist {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    flex-wrap: wrap;
    -webkit-box-pack: justify;
    justify-content: space-between;
    margin-top: 10px;
}

.picturelist.mt {
    margin-top: 60px;
}

.picturelist .item {
    position: relative;
    width: 48%;
    height: 320rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
}

.picturelist .item image {
    width: 100%;
    height: 100%;
}

.picturelist .info {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    text-indent: 20rpx;
    padding: 10rpx 0 15rpx 0;
    font-size: 28rpx;
    color: #fff;
    background: rgba(0,0,0,0.2);
}

.curimgtags {
    color: #f00;
    z-index: 99999;
}

.titlebox {
    background: #f9f9f9;
    width: 100%;
    width: 90%;
    padding: 5% 5% 2% 5%;
}

.scrollBg {
    width: 100%;
    background: #f7f9fb;
}

.fixed {
    position: fixed;
    z-index: 2;
}

.scrollTab {
    width: 90%;
    height: 40px;
    padding: 5% 0 5% 5%;
    overflow-x: scroll;
}

.scrollTab::-webkit-scrollbar {
    display: none;
}

.similar-units_list {
    white-space: nowrap;
}

.similar-units_item {
    display: inline-block;
    width: 21%;
    margin-right: 10px;
    text-align: center;
    border: 1px solid #DADADA;
    border-radius: 3px;
    background: #fff;
}

.tags {
    width: 100%;
    height: 30px;
    line-height: 30px;
    border-radius: 3px;
    display: inline-block;
}