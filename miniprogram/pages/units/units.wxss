
.units-list-container {
  padding: 260rpx 40rpx 0;
  background-color: #fff;
  flex: 1;
}

.list-loading-contaniner {
  padding: 0 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.loading-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.units-page {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}

.show-tip-item {
  background-image: linear-gradient(-206deg, #6a8eb5 0%, #334f72 100%);
  border-radius: 12rpx;
  height: 335rpx;
  box-sizing: border-box;
  padding: 36rpx 30rpx 46rpx;
  color: #fff;
  margin-bottom: 80rpx;
  box-shadow: -2rpx 40rpx 60rpx -30rpx rgba(51, 79, 114, 0.6);
}

.show-redbag-item {
  height: 134rpx;
  width: 100%;
  background: url('https://pic.tujia.com/upload/festatic/day_190320/201903201509279832.png') 50% 50% no-repeat;
  background-size: 670rpx auto;
  margin-bottom: 50rpx;
  margin-top: 30rpx;
}

.tip-title {
  font-size: 48rpx;
  color: #fff;
  line-height: 1;
  display: block;
}

.tip-sub-title {
  font-size: 24rpx;
  color: #fff;
  display: block;
  margin: 20rpx 0 44rpx;
}

.link-item {
  background: rgba(255, 255, 255, 0.15);
  border: 1px solid rgba(255, 255, 255, 0.15);
  box-shadow: inset 0 0 6px 0 rgba(255, 255, 255, 0.10);
  border-radius: 8rpx;
  flex: 1;
  height: 102rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 0;
  padding: 0 5rpx;
}

.link-item:not(:last-child) {
  margin-right: 20rpx;
}

.link-more-item {
  flex: 0.6;
}

.link-title {
  font-size: 28rpx;
  color: #fff;
  position: relative;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
  vertical-align: top;
  box-sizing: border-box;
}

.link-sub-title {
  font-size: 22rpx;
  color: #fff;
  margin-top: 10rpx;
  display: block;
}

.tip-btn-bar {
  display: flex;
}

.search-no-house-contaniner {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
}

.search-no-icon {
  width: 504rpx;
  height: 331rpx;
  display: inline-block;
  margin-bottom: 20rpx;
}

.search-no-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  font-weight: 300;
}

.houser-error-load {
  text-align: center;
}

.condintion-list-menu {
  width: 620rpx;
  display: flex;
  margin-top: 72rpx;
  flex-wrap: wrap;
}

.condintion-type-item {
  width: 180rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 50rpx;
  background-color: #f4f6f8;
  border-radius: 50rpx;
  margin: 0 40rpx 20rpx 0;
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
}

.condintion-type-item:nth-child(3n) {
  margin-right: 0;
}

.condintion-type-item-text {
  max-width: 100%;
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.clear-btn-box {
  height: 100%;
  display: inline-flex;
  align-items: center;
}
