}

.options-page {
    padding-bottom: 100rpx;
}

.item-display-type-1 {
    padding: 44rpx 40rpx 80rpx;
}

.display-type-item {
    margin-bottom: 80rpx;
}

.select-container {
    margin-bottom: 80rpx;
