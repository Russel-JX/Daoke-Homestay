.sub-group-title {
    font-size: 24rpx;
    color: #333;
    padding: 0 0 20rpx;
    font-weight: 500;
}

.sub-group-title-content {
    position: relative;
}

.group-btn {
    background: #fff;
    box-shadow: 0 2rpx 3rpx 0 rgba(0,0,0,0.08),0 2rpx 14rpx 0 rgba(0,2,4,0.08);
    border-radius: 30rpx;
    width: 156rpx;
    height: 56rpx;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin: 0 15rpx 15rpx 0;
    box-sizing: border-box;
}

.display-type-8-btn {
    background: #fff;
    box-shadow: 0 2rpx 3rpx 0 rgba(0,0,0,0.08),0 2rpx 14rpx 0 rgba(0,2,4,0.08);
    border-radius: 50rpx;
    display: inline-flex;
    flex-direction: column;
    width: 320rpx;
    height: 100rpx;
    justify-content: center;
    align-items: center;
    margin-right: 26rpx;
    font-size: 24rpx;
    color: #333;
}

.is-btn-selected {
    color: #e0162b;
    box-shadow: 0 2rpx 14rpx 0 rgba(214,63,95,0.40);
}

.is-btn-selected .label-desc {
    color: #e0162b;
}

.display-type-7-btn.is-btn-selected .label-text {
    color: #e0162b;
}

.display-type-7-btn.is-btn-selected {
    box-shadow: none;
}

.display-type-7-btn.is-btn-selected .iconfont-unit-facilities {
    box-shadow: 0 2rpx 14rpx 0 rgba(214,63,95,0.40);
    color: #e0162b;
}

.group-btn:nth-child(4n),.display-type-7-btn:nth-child(4n),.display-type-8-btn:nth-child(2n) {
    margin-right: 0;
}

.group-btns {
    display: flex;
    flex-wrap: wrap;
    transition: height .3s;
    padding: 0x;
}

.down-icon-show {
    position: absolute;
    right: 0;
    width: 60rpx;
    height: 60rpx;
    top: 50%;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    transform: translateY(-50%);
}

.down-icon-show::after {
    content: '';
    width: 14rpx;
    height: 14rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    box-sizing: border-box;
    border-right: 1px solid #666;
    border-bottom: 1px solid #666;
    transform: rotate(45deg) translate(-50%,-50%);
    transition: transform .3s;
    transition: transform .3s,-webkit-transform .3s;
}

.down-icon-open::after {
    transform: rotate(225deg);
}

.btm-btn-bar {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    z-index: 100;
    align-items: center;
    border-top: 1px solid #f0f0f0;
}

.option-clear {
    font-size: 28rpx;
    color: #666;
    height: 120rpx;
    line-height: 120rpx;
    margin: 0;
    padding: 0;
    width: 250rpx;
    box-sizing: border-box;
    border: none;
    border-radius: 0;
}

.option-submit {
    font-size: 34rpx;
    color: #FFF;
    background: #d5535f;
    height: 120rpx;
    line-height: 120rpx;
    margin-top: 0rpx!important;
    padding: 0;
    box-sizing: border-box;
    flex: 1;
    border: none;
    border-radius: 0;
}

.option-submit[disabled=''] {
    background: rgba(213,83,95,.5);
    border: none;
}

.label-desc {
    font-size: 20rpx;
    color: #999;
}

.display-type-7-btn {
    display: inline-flex;
    flex-direction: column;
    font-size: 20rpx;
    color: #666666;
    align-items: center;
    margin: 0 86rpx 40rpx 0;
}

.label-text {
    margin-top: 17rpx;
}

.iconfont-unit-facilities,.icon-level {
    position: relative;
    display: inline-block;
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    white-space: nowrap;
    border-radius: 25px;
    background-color: #fff;
    box-shadow: 0 2rpx 3rpx 0 rgba(0,0,0,0.08),0 2rpx 14rpx 0 rgba(0,2,4,0.08);
}

.unit-facilities-txt {
    margin-top: 30rpx;
    line-height: 1;
}

