canvas {
    display: block;
}

button+button:not([size="mini"]) {
    margin-top: 0rpx;
}

button {
    line-height: 1;
    padding: 0;
    border: none;
}

.wrap {
    width: 100%;
    height: 100%;
    background-repeat: no-repeat,no-repeat;
    background-size: 100% 100%;
}

.btns {
    display: flex;
    justify-content: center;
    margin-top: 90rpx;
}

.shareToFriendsCircle,.shareToFriends {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    border: none;
    width: 243rpx;
    background-image: linear-gradient(0deg,#fe784f 0%,#f2a166 100%);
    border-radius: 30rpx;
    margin: 0;
}

.shareToFriends {
    margin-left: 35rpx;
}

.popbg {
    position: absolute;
    top: 36%;
    width: 100%;
}

.popbg image {
    display: block;
    margin: 0 auto;
    width: 343rpx;
    height: 146rpx;
}

.login {
    width: 100%;
    height: 100%;
    text-align: center;
    background: #eee;
}

.tjlogo {
    margin: 450rpx auto 310rpx auto;
    width: 327rpx;
    height: 135rpx;
}

.phonenumber {
    display: inline-block;
    width: 622rpx;
    border: none;
    border-radius: 20rpx;
    color: #fff;
    font-size: 40rpx;
    background-image: linear-gradient(to bottom,#fc4e19 0%,#ef7c28 100%);
}

.tips {
    font-size: 28rpx;
    margin-top: 26rpx;
    color: #acabab;
}

.contents {
    position: absolute;
    text-align: center;
    width: 97%;
    top: 37%;
}

.text01 {
    font-size: 45rpx;
    color: #fff;
}

.text02 {
    font-size: 30rpx;
    color: #fff;
    margin-top: 10rpx;
}