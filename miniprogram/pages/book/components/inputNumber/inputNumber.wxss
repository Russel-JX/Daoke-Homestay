.from-num-text {
    font-size: 28rpx;
    color: #333;
    line-height: 1;
    display: inline-block;
    vertical-align: middle;
    width: 104rpx;
    text-align: center;
}

.form-number-reduce,.form-number-add {
    width: 50rpx;
    height: 50rpx;
    position: relative;
    display: inline-block;
    vertical-align: middle;
}

.form-number-reduce::before {
    content: '';
    height: 5rpx;
    width: 34rpx;
    background: #dadada;
    border-radius: 5rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.book-form-number-con {
    display: inline-block;
    align-items: center;
    height: 100%;
}

.form-number-add::before {
    position: absolute;
    content: '';
    height: 5rpx;
    width: 34rpx;
    background: #dadada;
    top: 50%;
    left: 50%;
    border-radius: 5rpx;
    transform: translate(-50%,-50%);
}

.form-number-add::after {
    content: '';
    width: 5rpx;
    height: 34rpx;
    background: #dadada;
    position: absolute;
    border-radius: 5rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.form-number-add.active::after,.form-number-add.active::before,.form-number-reduce.active::before {
    background: #d7616d;
}

.book-reception {
    padding: 0 40rpx 30rpx;
}

.reception-boder-box {
    position: relative;
    width: 200%;
    height: 200%;
    transform: scale(0.5);
    transform-origin: 0 0;
    pointer-events: none;
    box-sizing: border-box;
    border: 0 solid #e9eaec;
    border-bottom-width: 1px;
    left: 40rpx;
    right: 0;
}

.book-input-number {
    overflow: hidden;
    width: 100%;
}

.f-border-bottom-line-gray {
    position: relative;
    border: none;
}

.f-border-bottom-line-gray::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    border-bottom: 1px solid #e9e9e9;
    box-sizing: border-box;
    width: 200%;
    height: 200%;
    transform: scale(0.5);
    transform-origin: 0 0;
    border-radius: 0;
    pointer-events: none;
}

.reception-j {
    padding-top: 4rpx;
    left: 40rpx;
}