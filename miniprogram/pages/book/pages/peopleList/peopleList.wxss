.form-number-add {
    width: 24rpx;
    height: 24rpx;
    position: relative;
    margin-right: 26rpx;
}

.form-number-add::after {
    content: '';
    position: relative;
    width: 2rpx;
    height: 24rpx;
    background: #d7616d;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.form-number-add::before {
    position: absolute;
    content: '';
    height: 2rpx;
    width: 24rpx;
    background: #d7616d;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

