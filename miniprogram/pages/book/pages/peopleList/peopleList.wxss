    box-shadow: 0 10rpx 20rpx 0 rgba(255, 69, 69, 0.2);
    border-radius: 40rpx;
    font-size: 32rpx;
    color: #FFFFFF;
    text-align: center;
}

.people-item {
    height: 156rpx;
    display: flex;
    align-items: center;
    padding: 0 40rpx 0 0;
    box-sizing: border-box;
    position: relative;
}

.people-item::after {
    content: '';
    position: absolute;
    top: 0;
    width: 200%;
    height: 200%;
    transform: scale(0.5);
    transform-origin: 0 0;
    pointer-events: none;
    box-sizing: border-box;
    border: 0 solid #e9eaec;
    border-bottom-width: 1px;
    left: 40rpx;
    right: 0;
}

.list-item:last-child .people-item::after {
    border-bottom-width: 0;
}

.arrow-icon {
    display: inline-block;
    position: absolute;
    transform: translateY(-50%);
    top: 50%;
    width: 36rpx;
    height: 36rpx;
    right: 36rpx;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}