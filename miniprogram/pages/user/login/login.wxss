.cells__group {
    margin-top: 30rpx;
}

[class^="icon-bing"] {
    display: block;
    width: 30rpx;
    height: 30rpx;
    margin-right: 16rpx;
}

.bing-phone__input {
    width: 100%;
}

.btn-bing__code {
    width: 180rpx;
    padding: 0;
    font-size: 24rpx;
    line-height: 52rpx;
    text-align: center;
}

.header-user {
    padding: 120rpx 0 90rpx;
    text-align: center;
    position: relative;
}

.user-avatar {
    display: inline-block;
    width: 130rpx;
    height: 130rpx;
    background: #eee;
    border: 2rpx solid #e9e9e9;
    border-radius: 130rpx;
    background: #fff;
    box-sizing: border-box;
    vertical-align: top;
}

.user-name {
    margin-top: 20rpx;
    font-size: 32rpx;
    line-height: 52rpx;
}

.user-account {
    font-size: 24rpx;
    line-height: 44rpx;
    color: #999;
}

.login-tips {
    margin: 20rpx 30rpx;
    font-size: 22rpx;
    line-height: 26rpx;
    color: #999;
}

.image__verify__code {
    position: fixed;
    left: 50%;
    top: 20rpx;
    width: 90%;
    transform: translateX(-50%);
    border-radius: 0 0 3px 3px;
    background-color: #fff;
    z-index: 99;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,.3);
}

.image__verify__code .img {
    margin: 20rpx 0;
    padding: 20rpx 30rpx;
    overflow: hidden;
}

.image__verify__code .img image {
    float: left;
    height: 80rpx;
    width: 240rpx;
}

.image__verify__code .verify_code_input {
    margin: 20rpx 30rpx;
    padding: 10rpx 20rpx;
    border-radius: 4rpx;
    background-color: #efefef;
}

.image__verify__code .change__btn {
    float: right;
    font-size: 30rpx;
    border-radius: 3px;
}

.image__verify__code .sure__btn button {
    position: relative;
    border: none;
    border-top: 1rpx solid #ebebeb;
    color: #0079FF;
    font-size: 30rpx;
}

.role_bar {
    font-size: 22rpx;
    padding: 10rpx 0 0 20rpx;
    color: #979797;
}

.role_link_text {
    color: #d8646f;
}