.order-checkinfo {
    margin: 40rpx 20rpx 0rpx;
    background: #fff;
    position: relative;
    border-bottom: 1rpx dashed #e9e9e9;
    border-top-left-radius: 4rpx;
    border-top-right-radius: 4rpx;
}

.order-checkinfo::after {
    content: '';
    position: absolute;
    border: 10rpx solid #f7f9fb;
    border-radius: 50%;
    bottom: -5rpx;
    left: -5rpx;
}

.order-checkinfo::before {
    content: '';
    position: absolute;
    border: 10rpx solid #f7f9fb;
    border-radius: 50%;
    bottom: -5rpx;
    right: -5rpx;
}

.order-time {
    display: flex;
    width: 100%;
    height: 211rpx;
}

.order-return {
    width: 100%;
    height: 92.5rpx;
    text-align: center;
    font-size: 24rpx;
    color: #e0162b;
}

.order-return-black {
    height: 30rpx;
}

.return-desc {
    display: flex;
    align-items: center;
    justify-content: center;
}

.return-desc text {
    margin-right: 10rpx;
}

.room-let-time {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 33%;
    height: 211rpx;
}

.time-title {
    font-size: 24rpx;
    color: #999999;
}

.time-month-day {
    font-size: 42rpx;
    color: #333333;
    font-weight: 500;
}

.time-font {
    font-size: 24rpx;
    color: #333333;
}

.time-time {
    color: #666666;
    font-size: 24rpx;
}

.line-let-go {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 33%;
    height: 211rpx;
}

.room-go-time {
    width: 33%;
    height: 211rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.line {
    width: 60rpx;
    height: 1px;
    background: #E9E9E9;
}

.solid-arrow-right {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 8rpx 0 8rpx 12rpx;
    border-color: transparent transparent transparent #fd8238;
}