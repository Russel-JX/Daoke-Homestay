.cells__header {
    background: #f7f9fb;
}

.scroll-view {
    padding-top: 110rpx;
}

.warning-box {
    background: #f8eedc;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 1;
}

.info_circle {
    font-size: 0;
    line-height: 1;
    margin-left: 5rpx;
    vertical-align: -4px;
}

.icons-clock {
    display: inline-block;
    line-height: 1;
    width: 33rpx;
    height: 36rpx;
    margin: 0 5rpx;
    vertical-align: -3px;
}

.desc-box {
    display: flex;
}

.desc-box-item {
    display: block;
    width: auto;
    margin-right: 30rpx;
}

.total-box {
    font-size: 34rpx;
}

.rule-group {
    margin-top: 20rpx;
    padding: 0 30rpx;
    font-size: 22rpx;
    line-height: 36rpx;
    color: #999;
}

.price-details-btn {
    margin: 0 30rpx 0 5rpx;
    text-decoration: underline;
}

.button-group {
    padding: 50rpx 10rpx;
    text-align: center;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}

.btn-box {
    display: block;
    width: 0;
    -webkit-box-flex: 1;
    flex: 1;
    margin: 0 10rpx;
}

.list-item {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}

.list-item-info {
    display: block;
    width: 0;
    -webkit-box-flex: 1;
    flex: 1;
    word-wrap: break-word;
    white-space: normal;
    word-break: break-all;
}

.column-hd {
    display: inline-block;
    width: 150rpx;
}

.column-hd-type {
    display: inline-block;
    width: 200rpx;
}

.big {
    font-size: 32rpx;
}

.primary-bnt[plain] {
    margin-right: 30rpx;
    border-color: #e9e9e9;
    color: #666;
}

.status-text {
    display: inline-block;
    margin-left: 10rpx;
}