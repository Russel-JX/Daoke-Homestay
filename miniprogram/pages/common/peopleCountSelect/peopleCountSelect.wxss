.scroll-view {
    background: #ffffff;
}

.people-row {
    position: relative;
    padding-left: 40rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #333333;
}

.people-row::after {
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    content: "";
    display: block;
    width: 100%;
    height: 1px;
    background: #e9e9e9;
    transform: scale(1,.5);
}

.success-icon {
    position: absolute;
    right: 40rpx;
    top: 50%;
    margin-top: -16rpx;
}