.wifiwrap {
    background: url(https://pwastatic1.fvt.tujia.com/static/wechat/wifitwo/wifi_bg.jpg) no-repeat;
    background-size: cover;
    height: 100vh;
}

.wifi-header {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 88rpx;
    height: 132rpx;
}

.wifi-header-text {
    font-size: 48rpx;
    color: #44D39F;
}

.wifi-info-text {
    font-size: 48rpx;
    color: #44D39F;
    width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}

.wifi-header-icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 20rpx;
}

.wificont {
    position: relative;
    text-align: center;
}

.wifiicon {
    position: relative;
    width: 580rpx;
    height: 580rpx;
    margin: 70rpx auto 70rpx auto;
    animation: spin 1500ms infinite linear;
}

@-webkit-keyframes spin {
    0% {
        transform: rotate(360deg);
    }

    100% {
        transform: rotate(0deg);
    }
}

@keyframes spin {
    0% {
        transform: rotate(360deg);
    }

    100% {
        transform: rotate(0deg);
    }
}

.wifi-btn-container {
    display: flex;
    justify-content: center;
    padding-bottom: 100rpx;
}

.wifiman {
    position: absolute;
    top: 30%;
    left: 50%;
    margin-left: -100rpx;
    width: 200rpx;
    height: 200rpx;
}

.wifiname {
    position: absolute;
    bottom: 35%;
    font-size: 32rpx;
    color: #fff;
    width: 100%;
    text-align: center;
}

.nameinfo {
    margin: 0 auto;
    width: 50%;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.wifi-refresh-btn[type='primary'] {
    width: 310rpx!important;
    height: 96prx;
    background-image: linear-gradient(-225deg#e84358 0%,#e84358 100%);
    box-shadow: 0 20rpx 37rpx -17rpx rgba(229,100,0,0.66);
    border-radius: 12rpx;
}

.wifi-refresh-btn[type='primary']:active {
    color: #fff;
    background: #e84358;
}

.refresh-btn-active {
    color: #fff;
    background: #e84358;
}

.tujia-slogan-text {
    position: absolute;
    bottom: 5%;
    width: 100%;
    margin-top: 50rpx;
    text-align: center;
    color: rgb(196, 193, 193);
}

.tujia-slogan-text image {
    width: 206rpx;
    height: 34rpx;
    display: inline-block;
}

.tosetWifi {
    text-align: center;
    font-size: 48rpx;
    color: #fff;
    height: 350rpx;
    line-height: 300rpx;
}