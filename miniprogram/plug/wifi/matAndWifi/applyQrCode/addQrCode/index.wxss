}

.haveApplyCount {
    height: 46rpx;
    text-align: center;
    line-height: 46rpx;
    font-size: 24rpx;
    color: #FF9645;
    background: #F7ECE4;
    margin-bottom: 20rpx;
}

.formcss {
    display: block;
    padding: 0 0 0 40rpx;
    background: #fff;
}

.store_list {
    position: relative;
    display: flex;
    height: 96rpx;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(0,0,0,0.02);
    padding-right: 40rpx;
}

.store_list text {
    flex: 0.3;
    color: #999999;
}

.store_list input {
    flex: 0.7;
    color: #333;
    text-align: right;
}

.house_size_list {
    position: relative;
    display: flex;
    height: 96rpx;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(0,0,0,0.02);
    padding-right: 40rpx;
}

.house_size_list text {
    flex: 0.4;
    text-align: left;
    color: #999999;
}

.house_size_list input {
    flex: 0.6;
    text-align: right;
    color: #333;
}

.store_list icon,.house_size_list icon {
    position: absolute;
    width: 16rpx;
    height: 18rpx;
    right: 40rpx;
    top: 36rpx;
    border: 2rpx solid #ccc;
    border-color: #ccc #ccc transparent transparent;
    transform: rotate(45deg);
}

