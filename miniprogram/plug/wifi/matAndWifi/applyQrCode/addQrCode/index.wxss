.btn-submit {
    margin-top: 60rpx;
}

.btn-submit .btn {
    height: 96rpx;
    line-height: 96rpx;
    margin: 0 40rpx;
    background: #dadada;
    border-radius: 12rpx;
    font-size: 32rpx;
    color: #ffffff;
    text-align: center;
    border: none;
}

.btn-submit .active {
    background: #ff9645;
}

.show-dropdown-list {
    position: absolute;
    left: 0;
    top: 215rpx;
    width: 100%;
    z-index: 100;
}

.show-dropdown-list .list-alone {
    width: 100%;
    font-size: 14px;
    color: #333333;
    background: #fff8f3;
}

.show-dropdown-list .list-alone .text {
    margin-left: 40rpx;
    height: 96rpx;
    line-height: 96rpx;
    border-bottom: 1px solid rgba(0,0,0,0.02);
}

.sweet-tips {
    text-align: left;
    margin: 20rpx 47rpx 60rpx 40rpx;
    font-size: 24rpx;
