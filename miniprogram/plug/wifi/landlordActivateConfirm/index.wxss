.wrapper {
    background: #f8f9fb;
    margin-bottom: 98rpx;
}

.content {
    padding: 40rpx 40rpx 98rpx 40rpx;
}

.status {
    font-size: 48rpx;
    color: #44D39F;
    display: flex;
    justify-content: center;
    margin-bottom: 40rpx;
    font-weight: 500;
}

.statusImg {
    width: 48rpx;
    height: 48rpx;
    margin-top: 10rpx;
    margin-right: 20rpx;
}

.card {
    width: 100%;
    background: #FFFFFF;
    box-shadow: 0 2rpx 60rpx 0 rgba(0,0,0,0.08);
    border-radius: 12rpx;
    padding: 60rpx 40rpx 60rpx 40rpx;
    box-sizing: border-box;
    margin-bottom: 40rpx;
}

.title {
    font-size: 34rpx;
    color: #333333;
    margin-bottom: 30rpx;
    font-weight: bold;
}

.num {
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    border: 1px solid #DADADA;
    border-radius: 50%;
    display: inline-block;
    text-align: center;
    margin-right: 20rpx;
    font-size: 24rpx;
    font-weight: bold;
}

.text {
    font-size: 28rpx;
    color: #666666;
    margin-bottom: 20rpx;
}

.lastOne {
    margin-bottom: 0!important;
}

.message {
    font-size: 24rpx;
    color: #999999;
    padding-left: 40rpx;
}

.tkDetail {
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.left {
    color: #999999;
    min-width: 224rpx;
    display: inline-block;
}

.right {
    color: #333333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.bottomBtn {
    display: flex;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 9;
    width: 100%;
    background: #fff;
}

.btns {
    flex: 1;
    margin: 20rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    font-size: 28rpx;
    background: #FF9645;
    border: 1px solid #FF9645;
    border-radius: 12rpx;
}