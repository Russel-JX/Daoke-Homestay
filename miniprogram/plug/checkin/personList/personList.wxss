.main {
    padding: 0 30rpx;
    width: 100%;
    box-sizing: border-box;
}

.main .tit {
    font-family: PingFangSC-Medium;
    font-size: 50rpx;
    color: #2a2a2a;
    font-weight: bold;
    padding-top: 40rpx;
}

.main .tit-con {
    font-family: PingFangSC-Light;
    font-size: 30rpx;
    color: #5e646b;
    margin-top: 10rpx;
    margin-bottom: 100rpx;
}

.main .list .list-detail {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #ebebeb;
}

.main .list .list-detail .list-detail-l .list-detail-name {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}

.main .list .list-detail .list-detail-l .list-detail-name .v1 {
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    color: #2a2a2a;
    font-weight: bold;
}

.main .list .list-detail .list-detail-l .list-detail-name .v2 {
    font-family: PingFangSC-Light;
    font-size: 22rpx;
    color: #2a2a2a;
    border: 1px solid #dcdee0;
    border-radius: 6rpx;
    margin-left: 20rpx;
    padding: 2rpx 10rpx;
}

.main .list .list-detail .list-detail-r image {
    width: 48rpx;
    height: 48rpx;
    display: block;
    margin-right: 30rpx;
}

.main .list .list-detail .list-detail-l .list-detail-card {
    font-family: PingFangSC-Light;
    font-size: 30rpx;
    color: #2A2A2A;
}

.main .go-detail {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #22CA92;
    margin-top: 50rpx;
}

.main .contact-steward {
    margin-bottom: 180rpx;
    display: inline-block;
    margin: 200rpx auto 24rpx;
    border: 1px solid #DCDEE0;
    border-radius: 6rpx;
    padding: 12rpx 24rpx;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}

.main .contact-steward .contact-steward-inner {
    display: flex;
    justify-content: center;
    align-items: center;
}

.main .contact-steward .contact-steward-inner image {
    width: 28rpx;
    height: 36rpx;
    display: block;
}

.main .contact-steward .contact-steward-inner view {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #2A2A2A;
    margin-left: 16rpx;
}

.main .service {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 180rpx;
}

.main .service view {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #B4B9BF;
}

.main .service text {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #22CA92;
    margin-left: 10rpx;
}

.btm-btn {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top: 1px solid #EBEBEB;
    background: #fff;
}

.btm-btn .btn {
    background: #FAD330;
    border-radius: 6rpx;
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 34rpx;
    color: #2A2A2A;
    font-weight: bold;
}

.btm-btn .btn-bg {
    background: #EBEBEB;
    color: #B4B9BF;
}

.pop .pop-bg {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.7;
}

.pop .pop-con {
    width: 650rpx;
    position: fixed;
    top: 50%;
    left: 50rpx;
    background: #fff;
    transform: translateY(-50%);
    border-radius: 6rpx;
    padding: 0 50rpx;
    box-sizing: border-box;
}

.pop .pop-con .pop-con-tit {
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    color: #2B2F33;
    text-align: center;
    font-weight: bold;
    padding: 50rpx 0 30rpx;
}

.pop .pop-con .pop-con-content {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #5E646B;
    line-height: 44rpx;
}

.pop .pop-con .pop-con-content text {
    font-weight: bold;
}

.pop .pop-con .pop-con-btns {
    display: flex;
    justify-content: space-between;
    padding: 60rpx 0 50rpx;
}

.pop .pop-con .pop-con-btns view {
    width: 260rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 6rpx;
    border: 1px solid #B4B9BF;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #5E646B;
}

.pop .pop-con .pop-con-btns view.v1 {
    background: #FAD330;
    color: #2B2F33;
    border: none;
}