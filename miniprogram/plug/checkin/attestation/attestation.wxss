.main {
    padding: 0 30rpx;
    width: 100%;
    box-sizing: border-box;
}

.main .main-tit {
    font-family: PingFangSC-Medium;
    font-size: 50rpx;
    color: #2A2A2A;
    padding-top: 40rpx;
    font-weight: bold;
}

.main .main-con {
    font-family: PingFangSC-Light;
    font-size: 30rpx;
    color: #5E646B;
    margin-top: 10rpx;
    line-height: 1.5;
}

.main .main-other {
    font-family: PingFangSC-Semibold;
    font-size: 30rpx;
    color: #002800;
    margin-top: 120rpx;
    line-height: 1.5;
}

.main .btn {
    width: 690rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border: 1px solid #B4B9BF;
    border-radius: 6rpx;
    font-family: PingFangSC-Regular;
    font-size: 34rpx;
    color: #2A2A2A;
    margin-top: 30rpx;
}

.main .btn-bg {
    border: none;
    background: #FAD330;
    margin-top: 200rpx;
}

.main .btn-tip {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #B4B9BF;
    text-align: center;
    margin-top: 50rpx;
}

.main .c-g {
    color: #22CA92;
}

.btm {
    position: fixed;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
}

.btm .contact-steward {
    display: inline-block;
    margin: 0 auto 24rpx;
    border: 1px solid #DCDEE0;
    border-radius: 6rpx;
    padding: 12rpx 24rpx;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}

.btm .contact-steward .contact-steward-inner {
    display: flex;
    justify-content: center;
    align-items: center;
}

.btm .contact-steward .contact-steward-inner image {
    width: 28rpx;
    height: 36rpx;
    display: block;
}

.btm .contact-steward .contact-steward-inner view {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #2A2A2A;
    margin-left: 16rpx;
}

.btm .service {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 40rpx;
}

.btm .service view {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #B4B9BF;
}

.btm .service text {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #22CA92;
    margin-left: 10rpx;
}