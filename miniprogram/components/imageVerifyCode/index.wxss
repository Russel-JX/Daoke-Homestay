.image__verify__code {
    position: fixed;
    left: 50%;
    top: 20rpx;
    width: 90%;
    transform: translateX(-50%);
    border-radius: 0 0 3px 3px;
    background-color: #fff;
    z-index: 99;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,.3);
}

.image__verify__code .img {
    margin: 20rpx 0;
    padding: 20rpx 30rpx;
    overflow: hidden;
}

.image__verify__code .img image {
    float: left;
    height: 80rpx;
    width: 240rpx;
}

.image__verify__code .verify_code_input {
    margin: 20rpx 30rpx;
    padding: 10rpx 20rpx;
    border-radius: 4rpx;
    background-color: #efefef;
}

.image__verify__code .change__btn {
    float: right;
    font-size: 30rpx;
    border-radius: 3px;
}

.image__verify__code .sure__btn button {
    position: relative;
    border: none;
    border-top: 1rpx solid #ebebeb;
    color: #0079FF;
    font-size: 30rpx;
}