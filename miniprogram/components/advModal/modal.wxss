.mask-layer {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 1000;
    background: rgba(0,0,0,.8);
    overflow: hidden;
    top: 0;
}

.modal-box {
    width: 280px;
    height: 350px;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    display: flex;
    justify-content: center;
}

.modal-bg {
    width: 280px;
    height: 350px;
    margin: 0 auto;
    display: block;
}

.modal-close {
    width: 24px;
    height: 24px;
    position: absolute;
    right: 0;
    top: -24px;
    z-index: 10;
}