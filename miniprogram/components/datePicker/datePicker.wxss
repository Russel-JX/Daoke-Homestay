.col-item {
    text-align: center;
    line-height: 48px;
    font-size: 32rpx;
    color: #333;
    background: #fff;
}

.date-picker-component {
    background: #fff;
}

.date-picker-action-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 40rpx;
    height: 96rpx;
    background: #fff;
    line-height: 96rpx;
}

.date-picker-action-bar::before {
    border-bottom: 1px solid #e9e9e9;
}

.date-picker-cancel {
    font-size: 28rpx;
    color: #666;
}

.date-picker-title {
    font-size: 28rpx;
    color: #999;
}

.date-picker-confirm {
    font-size: 28rpx;
    color: #FF9645;
}

.date-picker-view {
    width: 100%;
    height: 220px;
}

.br1_bottom {
    position: relative;
}

.br1_bottom::before {
    height: 0;
    width: 200%;
    transform: scale(.5);
    position: absolute;
    content: '';
    bottom: 0;
    left: 0;
    transform-origin: 0 0;
}

.i-as {
    position: fixed;
    width: 100%;
    box-sizing: border-box;
    left: 0;
    right: 0;
    bottom: 0;
    background: #f7f7f7;
    transform: translate3d(0,100%,0);
    transform-origin: center;
    transition: all 0.2s ease-in-out;
    z-index: 900;
    visibility: hidden;
}

.i-as-show {
    transform: translate3d(0,0,0);
    visibility: visible;
}

.i-as-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.7);
    z-index: 900;
    transition: all 0.2s ease-in-out;
    opacity: 0;
    visibility: hidden;
}

.i-as-mask-show {
    opacity: 1;
    visibility: visible;
}

.column-item {
    background: #fff;
}