.icon-span {
    display: inline-block;
    border-radius: 100%;
    border: 1px solid #ccc;
    position: relative;
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}

.tj-radio-disabled {
    background-color: #efefef;
}

.tj-radio-com {
    display: inline-flex;
    align-items: center;
    vertical-align: middle;
}

.icon-span::after {
    border: 1px solid transparent;
    border-left: 0;
    border-top: 0;
    content: " ";
    position: absolute;
    width: 8rpx;
    height: 16rpx;
    top: 4rpx;
    left: 10rpx;
    transform: rotate(45deg) scale(0);
    transition: transform .2s;
    transition: transform .2s,-webkit-transform .2s;
}

.icon-span-select {
}

.icon-span-select::after {
    border-color: #fff;
    transform: rotate(45deg) scale(1);
}

.radio-label {
    font-size: 28rpx;
    color: #333;
    vertical-align: middle;
    margin-left: 20rpx;
}

.spot-radio-style .icon-span-select {
    background: none!important;
}

.spot-radio-style .spot-icon {
    width: 12rpx;
    height: 12rpx;
    border-radius: 12rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.spot-radio-style .icon-span-select::after {
    display: none;
}