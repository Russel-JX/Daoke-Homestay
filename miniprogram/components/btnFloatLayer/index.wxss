.float-layer-box {
    height: 140rpx;
    width: 140rpx;
    position: fixed;
    right: 40rpx;
    top: 40rpx;
}

.float-layer-bg {
    width: 100%;
    height: 140rpx;
}

.float-layer-close {
    width: 34rpx;
    height: 34rpx;
    position: absolute;
    right: -16rpx;
    top: -10rpx;
    z-index: 10;
}

.btnAnim {
    animation: shake 1s 0s infinite;
}

@-webkit-keyframes shake {
    0%,100% {
        transform: translateX(0);
    }

    10%,30%,50%,70%,90% {
        transform: translateX(-5px);
    }

    20%,40%,60%,80% {
        transform: translateX(5px);
    }
}

@keyframes shake {
    0%,100% {
        transform: translateX(0);
    }

    10%,30%,50%,70%,90% {
        transform: translateX(-5px);
    }

    20%,40%,60%,80% {
        transform: translateX(5px);
    }
}