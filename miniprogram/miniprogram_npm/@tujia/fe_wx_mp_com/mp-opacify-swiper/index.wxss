

.ad-swiper-item {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.ad-swiper-dots {
    display: inline-flex;
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    z-index: 10;
}

.ad-swiper-contaniner {
    position: relative;
    border-radius: 12rpx;
    overflow: hidden;
    width: 670rpx;
    margin: 0 auto;
    height: 335rpx;
}

.ad-swiper {
    height: 335rpx;
    border-radius: 12rpx;
    width: 100%;
}

.ad-item-image {
    border-radius: 12rpx;
    height: 100%;
    width: 100%;
}

.ad-swiper-dots-item {
    width: 10rpx;
    height: 10rpx;
    opacity: 0.4;
    background: #fff;
    margin: 0 6rpx;
    border-radius: 50%;
    transition: opacity .3s;
}

.ad-swiper-dots-item.active {
    opacity: 1;
}